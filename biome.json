{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off"
			}
		}
	},
	"javascript": {
    "formatter": {
      "quoteStyle": "single",
			"indentStyle": "space",
			"lineWidth": 100,
			"semicolons": "asNeeded"
    }
  }
}
