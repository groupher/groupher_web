{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/containers/*": ["src/containers/*"],
      "@/widgets/*": ["src/widgets/*"],
      "@/services": ["src/services"],
      "@/services/*": ["src/services/*"],
      "@/constant": ["utils/constant"],
      "@/constant/*": ["utils/constant/*"],
      "@/hooks": ["src/hooks"],
      "@/hooks/*": ["src/hooks/*"],
      "@/hoc": ["src/hoc"],
      "@/config": ["config"],
      "@/stores/*": ["src/stores/*"],
      "@/model": ["src/stores/Model"],
      "@/model/*": ["src/stores/Model/*"],
      "@/utils": ["utils"],
      "@/utils/*": ["utils/*"],
      "@/signal": ["utils/signal"],
      "@/signal/*": ["utils/signal/*"],
      "@/mobx": ["utils/mobx"],
      "@/mobx/*": ["utils/mobx/*"],
      "@/dom": ["utils/dom"],
      "@/dom/*": ["utils/dom/*"],
      "@/logger": ["utils/logger"],
      "@/logger/*": ["utils/logger/*"],
      "@/fmt": ["utils/fmt"],
      "@/fmt/*": ["utils/fmt/*"],
      "@/helper": ["utils/helper"],
      "@/helper/*": ["utils/helper/*"],
      "@/async": ["utils/async"],
      "@/async/*": ["utils/async/*"],
      "@/wallpaper": ["utils/wallpaper"],
      "@/wallpaper/*": ["utils/wallpaper/*"],
      "@/i18n": ["utils/i18n"],
      "@/i18n/*": ["utils/i18n/*"],
      "@/validator": ["utils/validator"],
      "@/validator/*": ["utils/validator/*"],
      "@/mock": ["utils/mock"],
      "@/mock/*": ["utils/mock/*"],
      "@/css": ["utils/css"],
      "@/css/*": ["utils/css/*"],
      "@/schemas": ["src/schemas"],
      "@/spec": ["src/spec"],
      "@/Img": ["src/widgets/Img"],
      "@/SvgIcons/*": ["src/widgets/SvgIcons/*"],
      "@/icons": ["src/widgets/Icons"],
      "@/icons/*": ["src/widgets/Icons/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "validate": false
      },
      {
        "name": "next"
      }
    ],
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.tsx", "**/*.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "removeComments": true
}
